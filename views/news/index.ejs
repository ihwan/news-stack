<%- include('includes/header'); -%>
<%- include('includes/nav'); -%>

<div class="container">

  <h1>News</h1>
  <ul class="nav nav-pills">
    <li class="nav-item">
      <a class="nav-link <% if (!selectedCategory) { %>active<% } %>" href="/news">전체</a>
    </li>
    <% for(var i=0; i < category.length; i++) { %>
      <a class="nav-link <% if (selectedCategory==category[i].id) { %>active<% } %>" href="?category=<%= category[i].id %>"><%= category[i].title %></a>
    <% } %>
  </ul>

  <% if (news.length>0) { %>
  <ul class="list-unstyled">
    <div class="row">
    <% for(var i=0; i < news.length; i++) { %>

  <div class="col-sm-4">
      <div class="card" style="width: 18rem;">
          <% if (typeof news[i].upload !== 'undefined' && news[i].upload) { %>

        <img class="card-img-top" src="/uploads/<%= news[i].upload %>" alt="Card image cap">
            <% } %>
        <div class="card-body">
          <h5 class="card-title"><%= news[i].category_title %> </h5>
          <p class="card-text">  <%= news[i].author %></p>
          <a href="/news/<%= news[i].id %>" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>
</div>


    <% } %>
  </ul>

  <% } else { %>
    <div class="card">
      <div class="card-header">
        Alert!
      </div>
      <div class="card-body">
        <blockquote class="blockquote mb-0">
          <p>Please add new article</p>
        </blockquote>
      </div>
    </div>
  <% } %>

  <div class="btn-toolbar justify-content-between" role="toolbar" aria-label="Toolbar with button groups">
    <div class="btn-group" role="group" aria-label="First group">
    </div>
    <div class="input-group">
      <a href="/news/add" class="btn btn-outline-success">기사작성</a>
    </div>
  </div>
</div>
<%- include('includes/footer'); -%>
